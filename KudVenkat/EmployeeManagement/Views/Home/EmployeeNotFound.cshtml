@model int

@{
    ViewBag.Title = "Employee Not Found";
}

<div class="alert alert-danger mt-1">
    <h4>404 Not Found Error : </h4>
    <hr />
    <h5>Employee with ID = @Model  cannot be found</h5>
</div>
<a asp-action="@nameof(HomeController.Index)" 
   asp-controller="@Utility.GetControllerRoutingName(nameof(HomeController))"
   class="btn btn-outline-success" style="width: auto">
    Click here to see the list of all employees
</a>