<metroControls:MetroWindow x:Class="WPFUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI"
        xmlns:metroControls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:metroIconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"

        ShowTitleBar="True" ShowIconOnTitleBar="True"
        ShowMinButton="False" ShowMaxRestoreButton="False" ShowCloseButton="True"

        SaveWindowPosition="True"
        WindowStartupLocation="CenterScreen"

                           
        GlowBrush="{DynamicResource AccentColorBrush}" 
        BorderBrush="{DynamicResource AccentColorBrush}" 
        BorderThickness="5"

        Title="Main Window">

    <metroControls:MetroWindow.RightWindowCommands>
        <metroControls:WindowCommands>
            <Button Content="Settings" />
            <Button>
                <StackPanel Orientation="Horizontal">
                    <metroIconPacks:PackIconModern Width="24" Height="24" Kind="FoodCupcake" />
                    <TextBlock Margin="4 0 0 0" VerticalAlignment="Center" Text="deploy cupcakes" />
                </StackPanel>
            </Button>
        </metroControls:WindowCommands>
    </metroControls:MetroWindow.RightWindowCommands>

    <Grid>

    </Grid>
</metroControls:MetroWindow>