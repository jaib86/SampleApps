<Window x:Class="SimpleWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleWPFApp"
        mc:Ignorable="d"
        Title="Main Window" Height="250" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" x:Name="button1" Content="Start" Click="Button1_Click"
                HorizontalAlignment="Left" VerticalAlignment="Center"
                Margin="20" Padding="25, 5" />

        <ProgressBar Grid.Row="1" x:Name="progressBar1"
                     VerticalAlignment="Center"
                     Margin="20" Height="18" Maximum="10000" />

        <CheckBox Grid.Row="2" x:Name="checkBox1" Content="Check Box"
                  VerticalAlignment="Center" Margin="20" IsEnabled="False" />
    </Grid>
</Window>